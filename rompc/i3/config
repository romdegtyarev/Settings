# Custom shortcut
# Lockscreen and suspend
set $Locker i3lock-fancy
bindsym Ctrl+$mod+l exec --no-startup-id $Locker
bindsym Ctrl+$mod+k exec --no-startup-id systemctl suspend

# Media keys
# Pulse Audio controls
set $VolUpdate (pkill -SIGRTMIN+1 i3blocks)
bindsym XF86AudioRaiseVolume exec --no-startup-id pamixer -i 5 && $VolUpdate # increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pamixer -d 5 && $VolUpdate # decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pamixer -t && $VolUpdate          # mute sound

# Player controls
set $PlayerUpdate (pkill -SIGRTMIN+2 i3blocks)
bindsym Ctrl+space exec --no-startup-id mpc toggle && $PlayerUpdate
bindsym Ctrl+Prior exec --no-startup-id mpc prev && $PlayerUpdate
bindsym Ctrl+Next exec --no-startup-id mpc next && $PlayerUpdate

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20   #increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 #decrease screen brightness

# Screenshot
set $Scrot_pictures (/local/store/git/Settings/common/scripts/scrot.sh&)
set $Scrot_pictures_u (/local/store/git/Settings/common/scripts/scrot.sh -u &)
set $Scrot_pictures_s (/local/store/git/Settings/common/scripts/scrot.sh -s &)
bindsym --release Print exec --no-startup-id $Scrot_pictures
bindsym --release Shift+Print exec --no-startup-id $Scrot_pictures_u
bindsym --release Ctrl+Print exec --no-startup-id $Scrot_pictures_s

# Layout
set $KeyLayoutUpdate (pkill -SIGRTMIN+3 i3blocks)
bindsym Caps_Lock exec --no-startup-id $KeyLayoutUpdate

